sessionname mon

hardstatus alwayslastline 'g%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'

setenv PROMPT_COMMAND /bin/true

altscreen on

startup_message off

term screen-256color

